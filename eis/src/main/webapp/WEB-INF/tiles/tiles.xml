<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">  
 
<tiles-definitions>  
   <definition name="layout" template="/WEB-INF/tiles/layout/layout.jsp">  
		<put-attribute name="header" value="/WEB-INF/tiles/tile/header.jsp" />  
		<put-attribute name="footer" value="/WEB-INF/tiles/tile/footer.jsp" />  
   </definition>
   
   <definition name="layout_login" template="/WEB-INF/tiles/layout/layout_login.jsp">  
   </definition>
   
   <definition name="layout_noHeader" template="/WEB-INF/tiles/layout/layout_noHeader.jsp">  
   </definition>
   
   <definition name="/*/*.tiles" extends="layout">  
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />  
   </definition>
   
   <definition name="/*/*/*.tiles" extends="layout">  
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />  
   </definition>
   
   <definition name="/*/*.tiles_onlyBody" extends="layout_login">  
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />  
   </definition>
   
   <definition name="/*/*.tiles_noHeader" extends="layout_noHeader">  
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />  
   </definition>
   
    <definition name="/*/*/*.tiles_noHeader" extends="layout_noHeader">  
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />  
   </definition>
   
</tiles-definitions>